canvas {
  position: fixed;
  top: 0;
  left: 400px;
  width: 1125px;
  height: 1125px;
}
.preview {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  position: absolute;
  z-index: 2;
}
.preview image {
  width: 200px;
  height: 200px;
  position: absolute;
  top: 30%;
  left: 25%;
  z-index: 3;
  border: 1px dashed #fff;
}
.tab {
  margin-top: 10px;
}
.tab button{
  font-size: 12px;
  margin-right: 5px;
}
.save{
  padding: 10px;
}
.save button {
  background-color: #ffb6c1;
}