page {
  height: 100%;
  width: 100%;
  background-color: pink;
  z-index: 1000;
}

.image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

image {
  width: 50%;
  height: 40%;
  padding: 18% 23%;
}

.result {
  position: relative;
  /* margin: 90% 40rpx 0; */
  top: 660rpx;
  padding: 40rpx 50rpx;
  border-radius: 20rpx;
  border: 1rpx solid pink;
  background: rgba(255, 255, 255, 0.95);
  font-size: 32rpx;
  line-height: 2;
  color: #495057;
  z-index: 1000;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.result::before {
  position: absolute;
  top: -80rpx;
  left: 295rpx;
  content: "";
  width: 0;
  height: 0;
  border: 40rpx solid transparent;
  border-bottom-color: rgba(255, 255, 255, 0.95);
}

.controls {
  position: fixed;
  bottom: 0;
  margin-bottom: 80rpx;
  width: 100%;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  /* padding: 5rpx 50rpx; */
  border-radius: 10rpx;
  /* background: rgba(204, 204, 204, 0.7); */
  background-color: #fff;
  color: #141c1a;
  font-size: 34rpx;
}

.button-active {
  /* background: rgba(204, 204, 204, 0.9); */
  background-color: pink;
}

